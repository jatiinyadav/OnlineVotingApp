@page
@model OnlineVotingApp.Pages.Admin.AdminGuestCreateModel
@{
	ViewData["Title"] = "Guest Create";
}

<h1>Create new Guest</h1>

<a class="btn btn-dark" href="/Admin/AdminGuestUpdate">Back to All Guests</a>

<form method="POST">
	<div class="form-group">
		<label for="guestName">Guest Name </label>
		<input type="text" class="form-control" name="guestName" placeholder="Guest Name...">
	</div>

	<div class="form-group">
		<label for="guestAadhaar">Guest Aadhaar</label>
		<input type="text" class="form-control" name="guestAadhaar" placeholder="Guest Aadhaar...">
	</div>

	<div class="form-group">
		<label for="guestPartyChoose">Party Name</label>
		<select class="form-select" aria-label="Default select example" name="guestPartyChoose">
			<option selected>Choose Party</option>
@*			<option value="BJP">BJP</option>
			<option value="AAP">AAP</option>
			<option value="INC">INC</option>
			<option value="BSP">BSP</option>*@

			@foreach (var item in Model.partyNames)
			{
				<option value="@item.PartyName">@item.PartyName</option>
			}

		</select>
	</div>

	<div class="form-group">
		<label for="guestPartyChoose">Party Symbol</label>
		<select class="form-select" aria-label="Default select example" name="guestChosenPartySymbol">
			<option selected>Choose Party Symbol</option>
@*			<option value="BJPSymbol">BJPSymbol</option>
			<option value="AAPSymbol">AAPSymbol</option>
			<option value="INCSymbol">INCSymbol</option>
			<option value="BSPSymbol">BSPSymbol</option>*@

			@foreach (var item in Model.partyNames)
			{
					<option value="@item.PartySymbol">@item.PartySymbol</option>
			}
		</select>
	</div>

	<br />

	<button type="submit" class="btn btn-primary">Submit</button>
</form>